{
  "name": "lichess-bot",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "build": "NODE_ENV=production bun build --minify --compile ./src/index.ts --outfile=dist/bot",
    "build:linux": "bun run build --target=bun-linux-arm64",
    "build:windows": "bun run build --target=bun-windows-x64",
    "start": "./dist/bot",
    "format": "bunx oxfmt --list-different || bunx oxfmt"
  },
  "dependencies": {
    "@lichess/api": "^0.0.2",
    "@stockfish/bun": "^0.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "oxfmt": "^0.20.0",
    "typescript": "^5.9.3"
  }
}
