{
  "name": "lichess-bot",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "build": "NODE_ENV=production bun build --minify --compile ./src/index.ts --outfile=dist/bot --target=bun-linux-arm64",
    "format": "oxfmt --list-different || oxfmt"
  },
  "dependencies": {
    "@lichess/api": "^0.0.2",
    "@stockfish/bun": "^0.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "oxfmt": "^0.24.0",
    "typescript": "^5.9.3"
  }
}
